html
	head
		include navBar.pug
		title add message #{title}
		style
			include addMessage.css 
	body
		div.addMessageContainer
			form.addMessage(method="POST", action="/addMessages")
				p.titleMessage
					input.inputTitleMessage(type="text", name="title", value="title of your message", autocomplete="off")
				p.bodyMessage
					input.inputBodyMessage(type="text", name="bodyMessage", value="body of your message", autocomplete="off")
				p.submitMessage
					input.inputSubmitMessage(type="submit", name="submit", value="Add message", autocomplete="off")